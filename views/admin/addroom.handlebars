<h2>Add Rooms</h2>  
    <form method="POST" action="/addroombyAdmin" enctype="multipart/form-data">
        <div class="addroom">
        <label>Title</label>
        <input type="text" name="title" id="title"> <br><br>

        <label>Price per night</label>
        <input type="text" name="price" id="price"> <br><br>

        <label>Room description</label>
        <textarea id="description" name="description"></textarea><br><br>

        <label>Location</label>
        <input type="text" name="location" id="location"> <br><br>
        <label>Set as Featured</label>
        <select name="yesno">
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </select><br><br>
        <label>File Upload</label>
        <input type="file" accept="image/bmp, image/jpeg, image/png, image/jpg" name="picture" id="picture"> <br><br>
        <input type="submit" class="btn" value="Add Room">
        </div>
    </form>
