<script src="https://kit.fontawesome.com/70195ad3d9.js" crossorigin="anonymous"></script>

<div class="testbox">
    <h2 style="text-align: center;">Register Now</h2>
    <form method="POST" action="/register_validation">
    <hr>
      <label id="icon" for="email"> <i class="fas fa-envelope-square form_element"></i></label>
    <input type="text" name="email" id="email" placeholder="Email" class="form_element"/>
 
    

       <label id="icon" for="fname"><i class="fas fa-address-card "></i></i></label>
      <input type="text" name="fname" id="fname" placeholder="First Name" />
   


       <label id="icon" for="lname"><i class="fas fa-address-card"></i></i></label>
    <input type="text" name="lname" id="lname" placeholder="Last Name " />



     <label id="icon" for="name"><i class="fas fa-key"></i></label>
    <input type="password" name="pwd" id="pwd" placeholder="Create Password" />

    
    {{#each messages}}
        <div class="errors">{{this}}</div>
        {{/each}}
    
    <p>By clicking Register, you agree on our terms and conditions</p>
    <button class="btn" type="submit">Register</button>
    
    </form>
  
</div>

